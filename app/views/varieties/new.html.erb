<legend>Nueva variedad</legend>

<%= form_for(@variety, :class => 'form-horizontal') do |f| %>
  <div class="control-group">
    <label> Familia: <%= @variety.family.name %> </label> 
    <label> Color: <%= @variety.color.name %> </label>  <input type="hidden" name="color_id" value="<%= @variety.color.id %>">
    <label class="control-label" for="name">Nombre</label>
    <div class="controls">
      <%= f.text_field :name, :placeholder=>'name' %>
    </div>
  </div>

  <div class="form-actions">
    <button type="submit" class="btn btn-primary">Guardar</button>
    <%= link_to 'Volver', @variety.color, :class =>'btn' %>
  </div>
<% end %>
